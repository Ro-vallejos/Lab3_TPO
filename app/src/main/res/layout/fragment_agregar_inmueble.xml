<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9FE">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ivFoto"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/inmuebles"
                android:background="@android:color/transparent"
                android:contentDescription="@string/app_name"/>

            <Button
                android:id="@+id/btnSeleccionarFoto"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="Seleccionar Foto"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:background="@drawable/bg_btn_disponible"/>

            <EditText
                android:id="@+id/etDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@null"
                android:hint="DirecciÃ³n"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_400"
                android:paddingVertical="8dp"
                android:textSize="16sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D3CCE6"/>

            <EditText
                android:id="@+id/etPrecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@null"
                android:hint="Precio"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_400"
                android:inputType="numberDecimal"
                android:paddingVertical="8dp"
                android:textSize="16sp" />
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#D3CCE6"/>

            <EditText
                android:id="@+id/etAmbientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@null"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_400"
                android:hint="Ambientes"
                android:inputType="number"
                android:paddingVertical="8dp"
                android:textSize="16sp" />
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#D3CCE6"/>

            <EditText
                android:id="@+id/etUso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@null"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_400"
                android:hint="Uso (Ej: Residencial)"
                android:paddingVertical="8dp"
                android:textSize="16sp" />
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#D3CCE6"/>

            <EditText
                android:id="@+id/etTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@null"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_400"
                android:hint="Tipo (Ej: Casa, Dpto...)"
                android:paddingVertical="8dp"
                android:textSize="16sp" />
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#D3CCE6"/>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#D3CCE6"/>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#D3CCE6"/>

            <EditText
                android:id="@+id/etSuperficie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@null"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_400"
                android:hint="Superficie"
                android:inputType="numberDecimal"
                android:paddingVertical="8dp"
                android:textSize="16sp" />
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#D3CCE6"/>

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:text="Guardar Inmueble"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:background="@drawable/bg_btn_disponible"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
